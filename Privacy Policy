<script>
  const html = document.documentElement;
  const body = document.body;
  const deBtn = document.getElementById('btn-de');
  const enBtn = document.getElementById('btn-en');

  function setLang(lang){
    if (lang === 'en'){ body.classList.remove('show-de'); body.classList.add('show-en'); html.lang='en';
      deBtn.classList.remove('chip--active'); deBtn.setAttribute('aria-pressed','false');
      enBtn.classList.add('chip--active');    enBtn.setAttribute('aria-pressed','true');
    } else { body.classList.remove('show-en'); body.classList.add('show-de'); html.lang='de';
      enBtn.classList.remove('chip--active'); enBtn.setAttribute('aria-pressed','false');
      deBtn.classList.add('chip--active');    deBtn.setAttribute('aria-pressed','true');
    }
    localStorage.setItem('hg_lang', lang);
  }
  deBtn.addEventListener('click', () => setLang('de'));
  enBtn.addEventListener('click', () => setLang('en'));

  // init
  document.getElementById('year').textContent = new Date().getFullYear();
  const saved = localStorage.getItem('hg_lang');
  if (saved) setLang(saved);
</script>
