  <script>
    const y=document.getElementById('year'); y.textContent=new Date().getFullYear();
    function setLang(lang){
      const de=document.getElementById('de'), en=document.getElementById('en');
      const bde=document.getElementById('btn-de'), ben=document.getElementById('btn-en');
      if(lang==='de'){de.style.display='block';en.style.display='none';bde.classList.add('active');ben.classList.remove('active')}
      else{de.style.display='none';en.style.display='block';ben.classList.add('active');bde.classList.remove('active')}
      window.scrollTo({top:0,behavior:'smooth'});
    }
  </script>
